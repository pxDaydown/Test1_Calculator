<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriangleActivity">

    <TextView
        android:id="@+id/output"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:text="        输出"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601" />

    <TextView
        android:id="@+id/edOutput"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toEndOf="@+id/output"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601" />

    <Button
        android:id="@+id/sin"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="sin"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintStart_toEndOf="@+id/edInputRadian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/clear"
        android:layout_width="212dp"
        android:layout_height="47dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="清除"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/edOutput"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604" />

    <Button
        android:id="@+id/cos"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="cos"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/tan"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="tan"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintStart_toEndOf="@+id/edInputDegrees"
        app:layout_constraintTop_toBottomOf="@+id/sin"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/cot"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="cot"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tan"
        app:layout_constraintTop_toBottomOf="@+id/cos"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/edInputDegrees"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/edOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/inputDegrees"
        app:layout_constraintTop_toBottomOf="@+id/edInputRadian"
        app:layout_constraintVertical_bias="0.202" />

    <EditText
        android:id="@+id/edInputRadian"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/edOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toEndOf="@+id/inputRadian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <TextView
        android:id="@+id/inputRadian"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:text="弧度输入"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/inputDegrees"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:text="角度输入"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputRadian"
        app:layout_constraintVertical_bias="0.287" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="计算"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/system"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/system"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="进制"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/triangle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/calculate" />

    <Button
        android:id="@+id/triangle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="#ABFF9800"
        android:fontFamily="sans-serif"
        android:text="三角"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/unit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/system" />

    <Button
        android:id="@+id/unit"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="单位"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/triangle" />

</androidx.constraintlayout.widget.ConstraintLayout>