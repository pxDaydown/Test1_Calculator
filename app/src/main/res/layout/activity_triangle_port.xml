<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriangleActivity">

    <TextView
        android:id="@+id/output"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:text="        输出"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <TextView
        android:id="@+id/edOutput"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/output"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <Button
        android:id="@+id/sin"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="484dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="sin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cos"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:layout_marginBottom="260dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="清除"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cos"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="484dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="cos"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tan"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toEndOf="@+id/sin" />

    <Button
        android:id="@+id/tan"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="484dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="tan"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cot"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/cos" />

    <Button
        android:id="@+id/cot"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="484dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="cot"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/tan" />

    <EditText
        android:id="@+id/edInputDegrees"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginBottom="552dp"
        android:ems="10"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/inputDegrees" />

    <EditText
        android:id="@+id/edInputRadian"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/edInputDegrees"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/inputRadian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/inputRadian"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:text="弧度输入"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/inputDegrees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputDegrees"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="552dp"
        android:text="角度输入"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="计算"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/system"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/system"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="进制"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/triangle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/calculate" />

    <Button
        android:id="@+id/triangle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="#ABFF9800"
        android:fontFamily="sans-serif"
        android:text="三角"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/unit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/system" />

    <Button
        android:id="@+id/unit"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="单位"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/triangle" />

</androidx.constraintlayout.widget.ConstraintLayout>